<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.yedam.dolvomee.service.review.ReviewMapper">

   <select id="selectReviewList" resultType="co.yedam.dolvomee.service.review.ReviewVO">
      select * from review
   </select>
   
   <select id="selectReview" resultType="co.yedam.dolvomee.service.review.ReviewVO">
      select * from review where users_email = #{users_email}
   </select>
   
   <insert id="insertReview">
      insert into review values(#{users_email}, #{users_name}, #{users_pwd}, #{users_phone}, #{users_addr}, #{users_author})
   </insert>
   
   <update id="updateReview">
      update review set users_pwd = #{users_pwd}, users_author = #{users_author} where users_email = #{users_email}
   </update>
   
   <delete id="deleteReview">
      delete from review where users_email = #{users_email}
   </delete>

</mapper>