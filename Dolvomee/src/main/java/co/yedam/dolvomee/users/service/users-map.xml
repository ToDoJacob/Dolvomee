<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.yedam.dolvomee.users.service.UsersMapper">   <!-- MemberMapper 가지고 있는 메소드 명을 사용함  -->

   <select id="selectUserList" resultType="co.yedam.dolvomee.users.service.UsersVO">
      select * from users
   </select>
   
   <select id="selectUser" resultType="co.yedam.dolvomee.users.service.UsersVO">
      select * from users where users_email = #{usersEmail}
      <if test="usersPwd != null">
      AND users_pwd = #{usersPwd}
      </if>
   </select>
   
   <insert id="insertUser" parameterType="co.yedam.dolvomee.users.service.UsersVO">
      insert into users values(#{usersEmail}, #{usersName}, #{usersPwd}, #{usersPhone}, #{usersAddr}, #{usersAuthor})
   </insert>
   
   <update id="updateUser" parameterType="co.yedam.dolvomee.users.service.UsersVO">
      update users set users_pwd = #{usersPwd}, users_author = #{usersAuthor} where users_email = #{usersEmail}
   </update>
   
   <delete id="deleteUser" parameterType="co.yedam.dolvomee.users.service.UsersVO">
      delete from users where users_email = #{usersEmail}
   </delete>

</mapper>